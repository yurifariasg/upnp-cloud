<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center_vertical|center_horizontal" android:id="@+id/home_control_item_layout">
    <ImageView 
        android:id="@+id/itemImageView" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignParentTop="true" 
    	android:layout_alignParentLeft="true" 
    	android:background="@drawable/item_background" 
    	android:padding="10dip" 
    	android:src="@drawable/item_other_off">
    </ImageView>
    <TextView 
        android:id="@+id/friendlyNameTextView" 
    	android:layout_width="wrap_content" 
    	android:text="Unknown sensor" 
    	android:background="@drawable/item_lower_background" 
    	android:layout_height="wrap_content" 
    	android:layout_alignLeft="@+id/itemImageView" 
    	android:layout_alignRight="@+id/itemImageView" 
    	android:layout_marginTop="10dip" 
    	android:layout_below="@+id/itemImageView" 
    	android:gravity="center_vertical|center_horizontal" 
    	android:padding="5dip">
    </TextView>    
</RelativeLayout>
