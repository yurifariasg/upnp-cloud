<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seven_seg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:paddingLeft="10dp">
    
    <ImageView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sevenseg_sign" >
    </ImageView>

    <ImageView
        android:id="@+id/ten_digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sevenseg_digit" >
    </ImageView>

    <ImageView
        android:id="@+id/digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sevenseg_digit" >
    </ImageView>
    
    <ImageView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/led_red_dot" >
    </ImageView>
    
    <ImageView
        android:id="@+id/deci_digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sevenseg_digit" >
    </ImageView>
    
    <ImageView
        android:id="@+id/degc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:src="@drawable/led_red_degc" >

    </ImageView>
    
</LinearLayout>
    <TextView 
        android:id="@+id/nameTextView" 
    	android:layout_width="wrap_content" 
    	android:layout_height="match_parent"
    	android:text="Unknown sensor"   
    	android:paddingLeft="5dp"
    	android:textSize="18sp"
    	android:gravity="center_vertical" >
    </TextView>    
    
</LinearLayout>