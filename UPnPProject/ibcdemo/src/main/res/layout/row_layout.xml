<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:padding="0dp" >
    <ImageView
        android:id="@+id/bulbStatusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp" />

    <TextView
        android:id="@+id/row_details_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/bulbStatusImage"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/uuid"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/bulbName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/row_details_line"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/bulbStatusImage"
        android:gravity="center_vertical"
        android:text="Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/accompanyingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:background="@color/bulbNameNotAvailable"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp" />

</RelativeLayout>